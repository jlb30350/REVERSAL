<div class="container mt-4">
  <h1 class="mb-4">Détails de la Réservation</h1>

  <div class="custom-border">
    <p>
      <strong><%= t('reservations.show.reservation_id') %> :</strong>
      <%= @reservation.id %>
    </p>

    <p>
      <strong>Nom de la Salle :</strong>
      <%= @reservation.salle&.name %>
    </p>

    <p>
      <strong>Date et Heure de Début :</strong>
      <%= @reservation.start_time.strftime("%d/%m/%Y %H:%M") %>
    </p>

    <p>
      <strong>Date et Heure de Fin :</strong>
      <%= @reservation.end_time.strftime("%d/%m/%Y %H:%M") %>
    </p>

    <p>
      <strong>Nom du Réservataire :</strong>
      <%= @reservation.reserver_name %>
    </p>

    <p>
      <strong>Téléphone du Réservataire :</strong>
      <%= @reservation.reserver_phone %>
    </p>

    <p>
      <strong>Email du Réservataire :</strong>
      <%= @reservation.reserver_email %>
    </p>
  </div>

  <div class="mt-3">
    <%= link_to 'Retour à la liste', reservations_path, class: "btn btn-primary" %>
    <%= link_to 'Éditer cette réservation', edit_reservation_path(@reservation), class: "btn btn-secondary" %>
  </div>
</div>
