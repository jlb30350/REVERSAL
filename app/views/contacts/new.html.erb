<div class="contact-form-container" style="padding: 20px; max-width: 600px; margin: auto;">
  <h1>Contactez-nous</h1>
  <form action="/send_contact" method="post" style="font-family: Arial, sans-serif;">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label for="nom">Nom :</label>
    <input type="text" id="nom" name="nom" required style="width: 100%; padding: 8px;"><br><br>
    <label for="email">Email :</label>
    <input type="email" id="email" name="email" required style="width: 100%; padding: 8px;"><br><br>
    <label for="message">Message :</label><br>
    <textarea id="message" name="message" rows="4" cols="50" required style="width: 100%; padding: 8px;"></textarea><br><br>
    <input type="submit" value="Envoyer" style="padding: 10px 20px; background-color: #4A90E2; color: white; border: none; border-radius: 5px; cursor: pointer;">
  </form>

  <!-- Utilisation d'un bouton stylisé pour le retour à la page d'accueil -->
  <form action="<%= root_url %>">
    <button type="submit" class="blue-button" style="background-color: #4A90E2; color: white; border: none; padding: 10px 20px; text-align: center; display: inline-block; font-size: 16px; cursor: pointer; border-radius: 5px;">Retour à la page d'accueil de REVERSAL</button>
  </form>

  <!-- Affichage des messages flash -->
  <% flash.each do |type, message| %>
    <div class="flash <%= type %>" style="margin-top: 20px; padding: 10px; background-color: #f4f4f4; border-left: 5px solid <%= type == 'notice' ? 'green' : 'red' %>;"><%= message %></div>
  <% end %>
</div>

<style>
@media (max-width: 768px) {
  .contact-form-container {
    padding: 10px;
  }
  input[type="submit"], .blue-button {
    width: 100%; /* Fait que les boutons prennent toute la largeur sur mobile */
  }
}
</style>
